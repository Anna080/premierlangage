<script>
    function modal() {
        const alert = document.createElement('ion-alert');
        alert.header = 'Ajouter une activitÃ© au cours';
        alert.inputs = [
            {
                name: 'id',
                type: 'number',
                placeholder: 'Identifiant'
            }
        ];
        alert.buttons = [
            {
                text: 'Annuler',
                role: 'cancel',
                cssClass: 'secondary'
            },
            {
                text: 'Ajouter',
                handler: (data) => {
                    if (data.id) {
                        const input = document.getElementById('new-activity-id');
                        input.value = data.id;
                        document.querySelector('form').submit();
                    }
                }
            }
        ];
        document.body.appendChild(alert);
        return alert.present();
    }
</script>
{% endblock %}
